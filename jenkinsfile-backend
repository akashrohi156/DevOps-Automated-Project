pipeline {
  agent any
  stages {
    stage('Clone Repo') {
      steps {
        git 'https://github.com/<your-username>/DevOps-Automated-Project.git'
      }
    }
    stage('Deploy Backend via Ansible') {
      steps {
        sh 'ansible-playbook -i ansible/inventory.ini ansible/backend-deploy.yml'
      }
    }
  }
}
